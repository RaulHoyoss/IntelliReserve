<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IntelliReserve</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IntelliReserve.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    @RenderSection("Styles", required: false)
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        footer {
            background-color: #f1f1f1;
        }
    </style>
</head>
<body>
    

    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    <footer class="text-dark py-3 mt-auto">
        <div class="container">
            <div class="row text-center text-md-start gy-3">
                <!-- Contact -->
                <div class="col-md-4">
                    <h6 class="fw-bold">Contact Us</h6>
                    <p class="mb-1">Email: support@intellireserve.com</p>
                    <p class="mb-0">Phone: +1 800 123 456</p>
                </div>
                <!-- Social Media -->
                <div class="col-md-4">
                    <h6 class="fw-bold">Follow Us</h6>
                    <div class="d-flex justify-content-center justify-content-md-start gap-3">
                        <i class="bi bi-facebook fs-5"></i>
                        <i class="bi bi-twitter fs-5"></i>
                        <i class="bi bi-instagram fs-5"></i>
                    </div>
                </div>
                <!-- Legal -->
                <div class="col-md-4">
                    <h6 class="fw-bold">Legal</h6>
                    <p class="mb-1"><a href="#" class="text-dark text-decoration-none">Terms of Service</a></p>
                    <p class="mb-0"><a href="#" class="text-dark text-decoration-none">Privacy Policy</a></p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
