@model RegisterBusinessViewModel

@{
    ViewData["Title"] = "Register Business";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background-color: #ffffff;
    }

    .register-wrapper {
        height: calc(100vh - 56px);
        display: flex;
        flex-direction: row;
    }

    .left-panel {
        background-color: #f4f4f4;
        width: 33%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .calendar-box {
        background-color: #fff;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .logo-text {
        font-size: 1.8rem;
        font-weight: 600;
        color: #333;
    }

    .logo-icon {
        font-size: 1.8rem;
        color: #f9c10b;
        vertical-align: middle;
    }

    .calendar-placeholder {
        width: 100%;
        height: 220px;
        background-color: #e0e0e0;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #aaa;
        margin-top: 2rem;
        font-style: italic;
    }

    .form-panel {
        background-color: #fff9db;
        width: 67%;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 3rem;
        overflow: auto;
        max-height: calc(100vh - 56px);
    }

    .register-box {
        background-color: #fff;
        padding: 2.5rem 2rem;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        min-width: 320px;
        max-width: 400px;
        width: 100%;
    }

    .form-label {
        font-weight: 500;
        color: #333;
    }

    .form-control::placeholder {
        font-style: italic;
        color: #aaa;
    }

    .btn-yellow {
        background-color: #f9c10b;
        border: none;
        color: #000;
        font-weight: 500;
    }

    .btn-yellow:hover {
        background-color: #e0b200;
        color: #000;
    }
</style>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="register-wrapper">
    <div class="left-panel">
        <div class="calendar-box">
            <div>
                <span class="logo-text">ReservePro</span>
                <i class="bi bi-calendar-fill logo-icon"></i>
            </div>
            <div class="calendar-placeholder">
                Calendario
            </div>
        </div>
    </div>

    <div class="form-panel">
        <div class="register-box">
            <h4 class="mb-4 text-center">Register Business</h4>
            <form asp-action="RegisterWithUser" asp-controller="Business" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="OrganizationName" class="form-label"></label>
                    <input asp-for="OrganizationName" class="form-control" placeholder="Enter your organization name" />
                    <span asp-validation-for="OrganizationName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" placeholder="Enter your organization address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter a contact number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="What is your business about?"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-yellow w-100 mb-3">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
