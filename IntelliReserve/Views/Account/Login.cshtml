@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Cargar Bootstrap Icons (opcional, puede usarse sin íconos si no se necesita) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<!-- Incluir la CDN de Bootstrap para que los estilos y componentes se apliquen -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #ffffff;
    }

    .login-wrapper {
        min-height: 60vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column; /* Para que todo esté alineado verticalmente */
    }

    .login-box {
        background-color: #fff9db; /* Beige claro */
        padding: 2.5rem 2rem;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);
        min-width: 320px;
        max-width: 400px;
    }

    .logo-text {
        font-size: 1.8rem;
        font-weight: 600;
        color: #333;
    }

    .logo-icon {
        font-size: 1.8rem;
        color: #f9c10b;
        vertical-align: middle;
    }

    .form-label {
        font-weight: 500;
        color: #333;
    }

    .form-control::placeholder {
        font-style: italic;
        color: #aaa;
    }

    .btn-yellow {
        background-color: #f9c10b;
        border: none;
        color: #000;
        font-weight: 500;
    }

        .btn-yellow:hover {
            background-color: #e0b200;
            color: #000;
        }

    .link-group {
        display: flex;
        justify-content: space-between;
        font-size: 0.9rem;
        margin-top: 0.75rem;
    }

        .link-group a {
            text-decoration: none;
            color: #555;
        }

            .link-group a:hover {
                text-decoration: underline;
                color: #000;
            }
</style>

<div class="login-wrapper">
    <!-- Logo de la aplicación (está aquí antes del título) -->
    <div class="text-center mb-4">
        <span class="logo-text">IntelliReserve</span>
        <i class="bi bi-calendar-fill logo-icon"></i>
    </div>

   

    <!-- Formulario de login -->
    <div class="login-box mx-auto">

         <!-- Título del login, ahora encima del formulario -->
    <h4 class="mb-4 text-center">Login to Your Account</h4>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label for="Username" class="form-label">Username</label>
                <input type="text" class="form-control" id="Username" name="Username" placeholder="Enter your username" required>
            </div>

            <div class="mb-4">
                <label for="Password" class="form-label">Password</label>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter your password" required>
            </div>

            <button type="submit" class="btn btn-yellow w-100 mb-3">Login</button>
        </form>

        <div class="d-flex justify-content-between">
            <a href="profile-customer">¿Forgot Password?</a>
            <a href="/User/RegisterCustomer">Create Account</a>
        </div>
    </div>
</div>

<!-- Incluir la CDN de Bootstrap JS (opcional, si se usan interacciones dinámicas) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
