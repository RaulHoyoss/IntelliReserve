@model IntelliReserve.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Log in";
    Layout = null; // O usa tu layout principal si lo prefieres
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 h-screen flex items-center justify-center">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-full max-w-md">
        <div class="mb-4">
            <h2 class="text-2xl font-bold text-gray-800 text-center">Log in</h2>
        </div>
        <form asp-controller="Auth" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-red-500 mb-4"></div>
            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Email" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-6">
                <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Password" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="flex items-center justify-between">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                    Sign In
                </button>
                @* Puedes agregar un enlace de "Olvidaste tu contraseña" aquí si es necesario *@
            </div>
           
        </form>
    </div>
</body>
</html>