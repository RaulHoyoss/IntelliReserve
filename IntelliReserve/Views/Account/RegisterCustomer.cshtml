@{
    ViewData["Title"] = "Register Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Incluir la CDN de Bootstrap para estilos -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Incluir la CDN de Bootstrap Icons para los iconos -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row">
        <!-- Parte izquierda: Calendario estilizado -->
        <div class="col-md-4 d-flex justify-content-center align-items-center p-3" style="background-color: #f4f4f4;">
            <div class="text-center">
                <div class="mb-4">
                    <!-- Logo de la aplicación con el icono del calendario -->
                    <span class="logo-text" style="font-size: 2rem; font-weight: 600; color: #333;">ReservePro</span>
                    <i class="bi bi-calendar-fill" style="font-size: 2rem; color: #f9c10b;"></i>
                </div>
                <div class="calendar" style="width: 80%; height: 250px; background-color: #e0e0e0; border-radius: 8px;">
                    <!-- Puedes reemplazar este área con una imagen de calendario o un calendario estilizado usando JS -->
                    <p class="text-center" style="padding-top: 100px; color: #aaa;">Calendario</p>
                </div>
            </div>
        </div>

        <!-- Parte derecha: Formulario de registro de cliente -->
        <div class="col-md-8 p-4">
            <h2 class="mb-4 text-dark">Register Customer</h2>
            <form asp-action="RegisterCustomer" method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter your full name" required>
                </div>

                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter your email address" required>
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter your password" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>
        </div>
    </div>
</div>

<!-- Incluir la CDN de Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
