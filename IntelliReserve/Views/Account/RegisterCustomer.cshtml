@{
    ViewData["Title"] = "Register Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background-color: #ffffff;
       /* overflow: hidden; 
        /* impide el scroll vertical */
    }

    .register-wrapper {
        height: calc(100vh - 56px); /* ajusta si tu navbar tiene otra altura */
        display: flex;
        flex-direction: row;
    }

    .left-panel {
        background-color: #f4f4f4;
        width: 33%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .calendar-box {
        background-color: #fff;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .logo-text {
        font-size: 1.8rem;
        font-weight: 600;
        color: #333;
    }

    .logo-icon {
        font-size: 1.8rem;
        color: #f9c10b;
        vertical-align: middle;
    }

    .calendar-placeholder {
        width: 100%;
        height: 220px;
        background-color: #e0e0e0;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #aaa;
        margin-top: 2rem;
        font-style: italic;
    }

    .form-panel {
        background-color: #fff9db;
        width: 67%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 3rem;
    }

    .register-box {
        background-color: #fff;
        padding: 2.5rem 2rem;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        min-width: 320px;
        max-width: 400px;
        width: 100%;
    }

    .form-label {
        font-weight: 500;
        color: #333;
    }

    .form-control::placeholder {
        font-style: italic;
        color: #aaa;
    }

    .btn-yellow {
        background-color: #f9c10b;
        border: none;
        color: #000;
        font-weight: 500;
    }

        .btn-yellow:hover {
            background-color: #e0b200;
            color: #000;
        }
</style>

<div class="register-wrapper">
    <!-- Panel izquierdo -->
    <div class="left-panel">
        <div class="calendar-box">
            <div>
                <span class="logo-text">ReservePro</span>
                <i class="bi bi-calendar-fill logo-icon"></i>
            </div>
            <div class="calendar-placeholder">
                Calendario
            </div>
        </div>
    </div>

    <!-- Panel derecho -->
    <div class="form-panel">
        <div class="register-box">
            <h4 class="mb-4 text-center">Register Customer</h4>
            <form asp-action="RegisterCustomer" method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter your full name" required />
                </div>

                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter your email address" required />
                </div>

                <div class="mb-4">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter your password" required />
                </div>

                <button type="submit" class="btn btn-yellow w-100 mb-3">Register</button>
            </form>
        </div>
    </div>
</div>
