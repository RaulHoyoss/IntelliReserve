@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background-color: #ffffff;
        /*overflow: hidden;
        /* Impide el scroll vertical */
    }

    .home-wrapper {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        background-color: #f9f9f9;
        padding: 2rem;
    }

    .home-content {
        z-index: 1;
        text-align: center;
        padding: 2.5rem;
        background-color: #ffffff;
        border-radius: 1.2rem;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        width: 100%;
        background-color: #fff9db;
        color: #333;
    }

    .home-title {
        font-size: 3.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 2rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .btn-yellow {
        background-color: #f9c10b;
        border: none;
        color: #000;
        font-weight: 500;
        font-size: 1.1rem;
        padding: 0.75rem 2rem;
        border-radius: 0.5rem;
        transition: background-color 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .btn-yellow:hover {
            background-color: #e0b200;
        }

    .btn-group-home {
        display: flex;
        flex-direction: column;
        gap: 2rem; /* Aumentada la separación entre los botones */
        align-items: center;
    }

    .btn-group-home-row {
        display: flex;
        gap: 1.5rem; /* Aumentada la separación entre los botones */
        justify-content: center;
        width: 100%;
        margin-top:2rem;
    }

    .btn-group-home a {
        width: 100%;
    }

    /* Detalles visuales decorativos */
    .decorative-left, .decorative-right {
        position: absolute;
        top: 0;
        height: 100%;
        width: 120px;
        background-repeat: no-repeat;
        background-size: contain;
        opacity: 0.1;
    }

    .decorative-left {
        left: 0;
        background-image: url('https://cdn-icons-png.flaticon.com/512/2921/2921222.png');
        background-position: left center;
    }

    .decorative-right {
        right: 0;
        background-image: url('https://cdn-icons-png.flaticon.com/512/1008/1008003.png');
        background-position: right center;
    }

    /* Efecto de hover en los botones */
    .btn:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }

    /* Animación para el texto */
    .home-title {
        animation: fadeIn 1s ease-out;
    }

    
</style>

<div class="home-wrapper">
    <!-- Elementos decorativos laterales -->
    <div class="decorative-left"></div>
    <div class="decorative-right"></div>

    <!-- Contenido principal -->
    <div class="home-content">
        <div class="home-title">IntelliReserve</div>

        <!-- Botón de Login con más espacio arriba -->
        <div class="btn-group-home">
            <a href="login" class="btn btn-yellow" style="width: 80%;">Login</a>
        </div>

        <!-- Botones Create Customer y Create Business al mismo nivel -->
        <div class="btn-group-home-row">
            <a href="register-customer" class="btn btn-yellow">Create Customer</a>
            <a href="register-business" class="btn btn-yellow">Create Business</a>
        </div>
    </div>
</div>
